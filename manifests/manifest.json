{
  "manifest_version": 3,
  "name": "Kick Real Chat Viewers",
  "version": "1.2",
  "description": "Counts unique chatters and compares to official Kick.com viewers. Remembers counts across stream switches.",
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "host_permissions": ["https://kick.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://kick.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
