{
  "manifest_version": 2,
  "name": "Kick Real Chat Viewers",
  "version": "1.2",
  "description": "Counts unique chatters and compares to official Kick.com viewers. Remembers counts across stream switches.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://kick.com/*"
  ],
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://kick.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png", 
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "applications": {
    "gecko": {
      "id": "kick-real-viewer-counter@abdullahsaid.dev",
      "strict_min_version": "57.0"
    }
  }
}
