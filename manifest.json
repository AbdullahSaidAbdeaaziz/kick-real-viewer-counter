{
  "manifest_version": 3,
  "name": "Kick Real Chat Viewers",
  "version": "1.0",
  "description": "Counts unique chatters and compares to official Kick.com viewers.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://kick.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://kick.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
